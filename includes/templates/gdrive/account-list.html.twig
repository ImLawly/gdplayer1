<div class="row">
	<div class="col-12">
		<h1 class="h4 mb-3">{{ title }}</h1>
		<p>You can add a Google Drive account from this menu without creating a json file manually.</p>
		<div class="toolbar d-flex flex-wrap toolbar mb-3">
			<a href="{{ admin_dir }}/gdrive/new/" class="btn btn-success btn-sm">
				<em class="fas fa-plus-circle mr-2"></em>Add New
			</a>
			<button type="button" class="btn btn-danger btn-sm btn-hidden d-none" onclick="gdrive_accounts.delete.multi()">
				<em class="fas fa-trash-alt mr-2"></em>Delete
			</button>
			<button type="button" class="btn btn-info btn-sm" onclick="gdrive_accounts.reload()">
				<em class="fas fa-sync-alt mr-2"></em>Reload
			</button>
		</div>
		<table id="tbGDAccounts" class="table table-striped table-bordered table-hover table-sm m-0" style="width:100%" aria-describedby="Google Drive Account List">
			<thead>
				<tr>
					<th scope="col" style="width:64px!important">
						<div class="custom-control custom-checkbox mx-auto">
							<input type="checkbox" class="custom-control-input" id="ckAllGDA" data-tableid="#tbGDAccounts">
							<label class="custom-control-label" for="ckAllGDA"></label>
						</div>
					</th>
					<th scope="col">Email</th>
					<th scope="col">Bypass</th>
					<th scope="col">Status</th>
					<th scope="col">Added</th>
					<th scope="col">Updated</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th scope="col" style="width:64px!important">
						<div class="custom-control custom-checkbox mx-auto">
							<input type="checkbox" class="custom-control-input" id="ckAllGDA1" data-tableid="#tbGDAccounts">
							<label class="custom-control-label" for="ckAllGDA1"></label>
						</div>
					</th>
					<th scope="col">Email</th>
					<th scope="col">Bypass</th>
					<th scope="col">Status</th>
					<th scope="col">Added</th>
					<th scope="col">Updated</th>
					<th scope="col">Actions</th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
