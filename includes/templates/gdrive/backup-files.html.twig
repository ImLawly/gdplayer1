<div class="row">
	<div class="col-12">
		<h1 class="h4 mb-3">{{ title }}</h1>
		<div class="toolbar d-flex flex-wrap mb-3 toolbar">
			<button type="button" class="btn btn-danger btn-sm btn-hidden d-none" onclick="gdrive_backup_files.delete.multi()">
				<em class="fas fa-trash-alt mr-2"></em>Delete
			</button>
			<button type="button" class="btn btn-info btn-sm" onclick="gdrive_backup_files.reload()">
				<em class="fas fa-sync-alt mr-2"></em>Reload
			</button>
		</div>
		<table id="tbGDBackupFiles" aria-label="Google Drive Files" class="table table-striped table-bordered table-hover table-sm m-0" style="width:100%">
			<thead>
				<tr>
					<th scope="col" style="width:64px!important">
						<div class="custom-control custom-checkbox mx-auto">
							<input type="checkbox" class="custom-control-input" id="ckAllGDBF" data-tableid="#tbGDBackupFiles">
							<label class="custom-control-label" for="ckAllGDBF"></label>
						</div>
					</th>
					<th scope="col">File ID</th>
					<th scope="col">Backup File ID</th>
					<th scope="col">Owner</th>
					<th scope="col">Created</th>
					<th scope="col" style="width:100px">Actions</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th scope="col" style="width:64px!important">
						<div class="custom-control custom-checkbox mx-auto">
							<input type="checkbox" class="custom-control-input" id="ckAllGDBF1" data-tableid="#tbGDBackupFiles">
							<label class="custom-control-label" for="ckAllGDBF1"></label>
						</div>
					</th>
					<th scope="col">File ID</th>
					<th scope="col">Backup File ID</th>
					<th scope="col">Owner</th>
					<th scope="col">Created</th>
					<th scope="col" style="width:100px">Actions</th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
