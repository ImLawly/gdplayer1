{{ GTM_Body }}
<div id="mContainer" class="embed-container">
    <div class="embed-wrapper">
        <div id="loading">{% include 'loader/' ~ loader ~ '.html.twig' ignore missing with {playerColor:playerColor, playerColor2: playerColor2, rgbColor:rgbColor} %}</div>
        <h1 id="message">{{ message }}</h1>
    </div>
</div>
{% if blockADB %}
    {% include 'widget/blockadb.html.twig' %}
{% endif %}
{% if disableDirectAds != false %}
    <div id="directAds" style="display:none">
        <button id="closeAds" type="button" onclick="$('#directAds').hide();$('#iframeAds').attr('src', '')" title="Close" aria-label="Close">&times;</button>
        <iframe id="iframeAds" title="Ads" style="border:0" width="100%" height="100%"></iframe>
    </div>
{% endif %}
{% if showFakePlay %}
    <div id="fakePlayButton" style="display:none">
        <div class="img" style="background-image:url(&quot;{{ poster }}&quot;);"></div>
        <div class="play-button"><span>Play</span></div>
        {% if displayTitle %}
            <div class="title">{{ title }}</div>
        {% endif %}
    </div>
{% endif %}
{% if resumePlayback %}
    <div id="resume" class="resume-popup" style="display:none">
        <div class="body">{{ text_resume }}</div>
        <div class="footer">
            <button type="button" id="resume_no" onclick="{{ resumeNo }}">{{ text_resume_no }}</button>
            <button type="button" id="resume_yes" onclick="{{ resumeYes }}">{{ text_resume_yes }}</button>
        </div>
    </div>
{% endif %}
<form id="frmValidation" action="{{ requestUri }}" method="post">
    <input type="hidden" id="referer" name="referer" value="{{ referer }}" required>
</form>