<style>
    .wave {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .wave div {
        width: 15px;
        height: 40px;
        background: linear-gradient(to top, {{ playerColor }} 0, {{ playerColor2 }} 100%) !important;
        animation: wave-animation 1.2s infinite;
    }

    .wave div:nth-child(1) {
        animation-delay: 0s;
    }

    .wave div:nth-child(2) {
        animation-delay: 0.2s;
    }

    .wave div:nth-child(3) {
        animation-delay: 0.4s;
    }

    .wave div:nth-child(4) {
        animation-delay: 0.6s;
    }

    .wave div:nth-child(5) {
        animation-delay: 0.8s;
    }

    @keyframes wave-animation {
        0%,
        100% {
            transform: scaleY(1);
        }
        50% {
            transform: scaleY(2);
        }
    }
</style>
<div class="wave">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
</div>