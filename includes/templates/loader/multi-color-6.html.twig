<style>
    .loader {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: inline-block;
        position: relative;
        border: 3px solid;
        border-color: {{ playerColor }} {{ playerColor }} transparent transparent;
        box-sizing: border-box;
        animation: rotation 1.5s linear infinite;
    }
    .loader::after,
    .loader::before {
        content: '';  
        box-sizing: border-box;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: auto;
        border: 3px solid;
        border-color: transparent transparent {{ playerColor2 }} {{ playerColor2 }};
        width: 82px;
        height: 82px;
        border-radius: 50%;
        box-sizing: border-box;
        animation: rotationBack 1s linear infinite;
        transform-origin: center center;
    }
    .loader::before {
        width: 64px;
        height: 64px;
        border-color: #fff #fff transparent transparent;
        animation: rotation 2s linear infinite;
    }

    @keyframes rotation {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    } 
    @keyframes rotationBack {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(-360deg);
        }
    }
</style>
<div class="loader"></div>