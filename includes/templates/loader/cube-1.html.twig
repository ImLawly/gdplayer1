<style>
    .cube-spinner {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        width: 100px;
        height: 25px;
        perspective: 100px;
        margin: 0 auto;
    }

    .cube-spinner div {
        width: 25px;
        height: 25px;
        background-color: {{ playerColor }};
        animation: cube-spin 1.2s infinite ease-in-out;
    }

    .cube-spinner div:nth-child(2) {
        background-color: {{ playerColor2 }};
        animation-delay: 0.3s;
    }

    .cube-spinner div:nth-child(3) {
        background-color: {{ playerColor }};
        animation-delay: 0.6s;
    }

    .cube-spinner div:nth-child(4) {
        background-color: {{ playerColor2 }};
        animation-delay: 0.9s;
    }

    @keyframes cube-spin {
        0%,
        100% {
            background-color: {{ playerColor2 }};
            transform: rotateX(0) rotateY(0);
        }
        50% {
            background-color: {{ playerColor }};
            transform: rotateX(180deg) rotateY(180deg);
        }
    }
</style>
<div class="cube-spinner">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
</div>