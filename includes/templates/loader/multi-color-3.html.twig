<style>
    .ellipsis {
        display: block;
        position: relative;
        width: 80px;
        height: 20px;
        margin: 0 auto;
    }

    .ellipsis div {
        position: absolute;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        animation-timing-function: cubic-bezier(0, 1, 1, 0);
    }

    .ellipsis div:nth-child(1) {
        left: 0;
        animation: ellipsis1 0.6s infinite;
        background: {{ playerColor }};
    }

    .ellipsis div:nth-child(2) {
        left: 7px;
        animation: ellipsis2 0.6s infinite;
        background: {{ playerColor2 }}
    }

    .ellipsis div:nth-child(3) {
        left: 35px;
        animation: ellipsis2 0.6s infinite;
        background: {{ playerColor }}
    }

    .ellipsis div:nth-child(4) {
        left: 60px;
        animation: ellipsis3 0.6s infinite;
        background: {{ playerColor2 }}
    }

    @keyframes ellipsis1 {
        0% {
            transform: scale(0);
        }
        100% {
            transform: scale(1);
        }
    }
    @keyframes ellipsis3 {
        0% {
            transform: scale(1);
        }
        100% {
            transform: scale(0);
        }
    }
    @keyframes ellipsis2 {
        0% {
            transform: translate(0, 0);
        }
        100% {
            transform: translate(24px, 0);
        }
    }
</style>
<div class="ellipsis">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
</div>