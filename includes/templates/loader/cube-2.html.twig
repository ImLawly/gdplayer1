<style>
    .cube-grid {
        display: grid;
        grid-template-columns: repeat(3, 33px);
        grid-gap: 5px;
        justify-content: center;
        align-items: center;
    }

    .cube-grid div {
        width: 33px;
        height: 33px;
        background: {{ playerColor2 }};
        animation: cube-scale 1.3s infinite ease-in-out;
    }

    .cube-grid div:nth-child(2) {
        animation-delay: 0.1s;
    }

    .cube-grid div:nth-child(3) {
        animation-delay: 0.2s;
    }

    .cube-grid div:nth-child(4) {
        background: linear-gradient(to top, {{ playerColor }} 0, {{ playerColor2 }} 100%) !important;
        animation-delay: 0.3s;
    }

    .cube-grid div:nth-child(5) {
        background: linear-gradient(to top, {{ playerColor }} 0, {{ playerColor2 }} 100%) !important;
        animation-delay: 0.4s;
    }

    .cube-grid div:nth-child(6) {
        background: linear-gradient(to top, {{ playerColor }} 0, {{ playerColor2 }} 100%) !important;
        animation-delay: 0.5s;
    }

    .cube-grid div:nth-child(7) {
        animation-delay: 0.6s;
        background: {{ playerColor }};
    }

    .cube-grid div:nth-child(8) {
        animation-delay: 0.7s;
        background: {{ playerColor }};
    }

    .cube-grid div:nth-child(9) {
        background: {{ playerColor }};
        animation-delay: 0.8s;
    }

    @keyframes cube-scale {
        0%,
        70%,
        100% {
            transform: scale(1);
        }
        35% {
            transform: scale(0.5);
        }
    }
</style>
<div class="cube-grid">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
</div>