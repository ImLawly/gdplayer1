<style>
    .dots {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .dots div {
        width: 20px;
        height: 20px;
        background-color: {{ playerColor }};
        border-radius: 50%;
        animation: bounce 1.5s infinite ease-in-out;
    }

    .dots div:nth-child(2) {
        animation-delay: 0.2s;
    }

    .dots div:nth-child(3) {
        animation-delay: 0.4s;
    }

    @keyframes bounce {
        0%,
        80% {
            transform: scale(0);
        }
        100% {
            transform: scale(0);
        }
        60% {
            background-color: {{ playerColor2 }};
            transform: scale(1);
        }
        40% {
            background-color: {{ playerColor }};
            transform: scale(1);
        }
    }
</style>
<div class="dots">
    <div></div>
    <div></div>
    <div></div>
</div>